@using congNghePhanMem.common
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_main.cshtml";
}
@section header
{
    @null
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Họ và tên</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @if (Session[commonConst.user_session] != null)
                                {
                                    userLogin a = Session[commonConst.user_session] as userLogin;
                                    @a.name;
                                }
                                                    </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Chức vụ</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @if (Session[commonConst.user_session] != null)
                                {
                                    userLogin a = Session[commonConst.user_session] as userLogin;
                                    @a.department;
                                }
                                                    </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Số dự án đã tham gia</div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @if (Session[commonConst.user_session] != null)
                                        {
                                            userLogin a = Session[commonConst.user_session] as userLogin;
                                            @a.numProject;
                                        }
                                                                    </div>
                                </div>
                                <div class="col">
                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Lương</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @if (Session[commonConst.user_session] != null)
                                {
                                    userLogin a = Session[commonConst.user_session] as userLogin;
                                    @a.salary;
                                }
                                                    </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->

    <div class="row">
        <!-- Pie Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <!-- Card Body -->
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Content Column -->
        <div class="col-lg-6 mb-4">

            <!-- Project Card Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Dự án</h6>
                </div>
                <div class="card-body">
                    <h4 class="small font-weight-bold">Hoàn thành <span class="float-right">50%</span></h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-danger" role="progressbar" style="width: 50%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">Dự án đang làm <span class="float-right">75%</span></h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">Năng lực qua từng dự án <span class="float-right">30%</span></h4>
                    <div class="progress mb-4">
                        <div class="progress-bar" role="progressbar" style="width: 30%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>


        </div>

        <div class="col-lg-6 mb-4">

            <!-- Illustrations -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin cá nhân</h6>
                </div>
                <div class="card-body">
                    <ul>
                        <li>
                            Họ và tên : @if (Session[commonConst.user_session] != null)
                            {
                                userLogin a = Session[commonConst.user_session] as userLogin;
                                @a.name;
                            }
                        </li>
                        <li>
                            Giới tính : @if (Session[commonConst.user_session] != null)
                            {
                                var gtString = "";
                                userLogin a = Session[commonConst.user_session] as userLogin;
                                if(a.gender == 1)
                                {
                                    gtString = "Nam";
                                }
                                else
                                {
                                    gtString = "Nu";
                                }


                                @gtString
                            }
                        </li>
                        <li>
                            Email : @if (Session[commonConst.user_session] != null)
                            {
                                userLogin a = Session[commonConst.user_session] as userLogin;
                                @a.email;
                            }
                        </li>
                        <li>
                            Sinh ngày : @if (Session[commonConst.user_session] != null)
                            {
                                userLogin a = Session[commonConst.user_session] as userLogin;
                                @a.birthday;
                            }
                        </li>
                        <li>
                            Số điện thoại : @if (Session[commonConst.user_session] != null)
                            {
                                userLogin a = Session[commonConst.user_session] as userLogin;
                                @a.phone;
                            }
                        </li>
                        <li>
                            Quê quán : @if (Session[commonConst.user_session] != null)
                            {
                                userLogin a = Session[commonConst.user_session] as userLogin;
                                @a.address;
                            }
                        </li>
                        <li>Đại học : Tốt nghiệp đại học Thủy Lợi, khoa công nghệ thông tin, nghành công nghệ thông tin</li>
                        <li>
                            Phòng ban : @if (Session[commonConst.user_session] != null)
                            {
                                userLogin a = Session[commonConst.user_session] as userLogin;
                                @a.department;
                            }
                        </li>
                        <li>
                            Chức vụ : @if (Session[commonConst.user_session] != null)
                            {
                                userLogin a = Session[commonConst.user_session] as userLogin;
                                @a.positon;
                            }
                        </li>
                        <li>Kinh nghiệm : 2 năm làm hệ thống Web (Full Stack)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>


